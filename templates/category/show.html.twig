{% extends 'base.html.twig' %}

{% block title %}Catégorie #{{ category_name.id }}{% endblock %}

{% block body %}
<section class="container container-lg">
    <div class="media">
        <div class="media-body">
        {% for program in program_list %}
            <h3 class="mt-0">{{ program.title }}</h3>
            <p>{{ program.synopsis }}</p>
            <div>
                <a href="{{ path('program_show', { id: program.id}) }}">Voir plus de détails</a>
            </div>
        </div>
    </div>
     {% else %}
        <h3>Aucune série existante pour cette categorie !</h3>
    {% endfor %}


    <a href="{{ path('category_index') }}">
        Retour à la liste des catégories
    </a>
</section>
{% endblock %}